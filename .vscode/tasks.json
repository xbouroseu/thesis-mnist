{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "close": false,
    },
    "tasks": [
        {
            "label": "MNIST: LINKED Build",
            "type": "shell",
            "command": "nvc++",
            "args": [
                "-o",
                "../bin/mnist1_noacc_d_linked",
                "-I/usr/local/include/opencv4",
                "-Ilibraries",
                "-Wl,-lopencv_core,-lopencv_imgcodecs,-lopencv_highgui,-lopencv_imgproc",
                "-lstdc++fs",
                "--c++17",
                "-Mcudalib=curand",
                "../bin/training.o",
                "../bin/mnist.o",
                "../bin/layer.o",
                "../bin/network.o",
                "../bin/tensor.o",
                "../bin/utils.o",
                "../bin/ops.o",
                "/lib/x86_64-linux-gnu/libboost_log.so",
                "/lib/x86_64-linux-gnu/libpthread.so",
                "-acc",
                "-Minfo"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": "build",
            "presentation": {
                "group": "build"
            },
            "detail": "Linked Build on accelerator device."
        },
        {
            "type": "shell",
            "label": "NVC++: Compile source active file",
            "command": "nvc++",
            "args": [
                "-c",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}.o",
                "--c++17",
                "-I/usr/local/include/opencv4",
                "-Ilibraries",
                "-Mcudalib=curand",
                "-DBOOST_LOG_DYN_LINK",
                "${input:acc_level}",
                "${input:misc_input}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "isBackground": false,
            "group": {
                "kind": "build",
            },
            "presentation": {
                "group": "build"
            },
            "detail": "compiler: nvc++"
        },
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "acc_level",
            "description": "choose your accelerator level",
            "options": [
                "",
                "-acc=host",
                "-acc"
            ],
            "default": ""
        },
        {
            "type": "promptString",
            "id": "misc_input",
            "description": "provide any additional args",
            "default": ""
        }
    ]
}